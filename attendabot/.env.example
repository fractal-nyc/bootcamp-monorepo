DISCORD_TOKEN=bot-token-goes-here

# Admin panel
ADMIN_PASSWORD=your-admin-password-here
JWT_SECRET=your-jwt-secret-here
API_PORT=your-api-port-number

# Instructor credentials (multi-user login)
INSTRUCTOR_USERNAME_PASSWORD=abc123

# Discord OAuth (BetterAuth) â€” create at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-oauth-client-id
DISCORD_CLIENT_SECRET=your-discord-oauth-client-secret
BETTER_AUTH_SECRET=your-32-char-secret-here
BETTER_AUTH_URL=http://localhost:3001
# Comma-separated Discord user IDs allowed to log in (empty = allow all)
DISCORD_ALLOWED_USER_IDS=123456789,987654321

GEMINI_API_KEY=

# S3 database backup (uses IAM instance role on EC2, or AWS_ACCESS_KEY_ID/AWS_SECRET_ACCESS_KEY locally)
S3_BACKUP_BUCKET=attendabot-db-backups
AWS_REGION=us-east-1

# API key for external programmatic access (stored in attendabot/env secret)
# To authenticate: curl -H "x-api-key: YOUR_KEY" https://attendabot.com/api/status
API_KEY=

# Deployment -- not uploaded to Secrets Manager; used only by update-bot.sh
# Override with: ATTENDABOT_INSTANCE_ID=i-xxx ./update-bot.sh
# ATTENDABOT_INSTANCE_ID=i-XXXXXXXXX